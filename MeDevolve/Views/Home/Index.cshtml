@model IEnumerable<MeDevolve.Models.Emprestimo>
@{
    ViewBag.Title = "Index";
}

<h2>Resumo</h2>
<div class="jumbotron">

    @if (Model.Count() > 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OBJETO.NOME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.USUARIO.NOME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DATAEMP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DATAPREVDEV)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DATADEV)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OBJETO.NOME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.USUARIO.NOME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DATAEMP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DATAPREVDEV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DATADEV)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IDEMPRESTIMO }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IDEMPRESTIMO }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IDEMPRESTIMO })
                    </td>
                </tr>
            }

        </table>
    }
    else {
        <h2 class="text-muted">Nenhum registro</h2>
    }

</div>